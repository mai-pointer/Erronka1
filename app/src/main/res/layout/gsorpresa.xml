<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="382dp"
        android:layout_height="242dp"
        android:layout_margin="16dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/rounded_button"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="137dp"
            android:layout_height="208dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="ExtraText">


            <TextView
                android:id="@+id/titulo_platos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/catamaran_black"
                android:text="Ensalada cesar con nueces"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/descripcion_platos"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:text="La clásica ensalada cesar con un toque especial de la casa"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />/>


            <TextView
                android:id="@+id/precio_platos"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:text="Prezioa: 9 €"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/boton_platos"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_button_green"
                android:minHeight="60dp"
                android:text="Añadir"
                android:textColor="#FFFFFF" />


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>