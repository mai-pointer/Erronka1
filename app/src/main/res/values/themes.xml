<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Erronka1" parent="Theme.AppCompat.DayNight.NoActionBar">

        <!--        NUESTRO TEMA        -->

        <!-- Botones -->
        <item name="android:buttonStyle">@style/BotonGlobal</item>
        <!-- Otros -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <!-- Fondo -->
        <item name="android:windowBackground">@color/colorgrey</item>
        <!-- Textos -->
        <item name="android:textColor">@color/colorPrimary</item>
        <!-- Tarjetas -->
<!--        <item name="cardViewStyle">@style/MyCardViewStyle</item>-->
        <!-- Nav -->
        <item name="toolbarNavigationButtonStyle">@style/BottomNavTheme</item>
        <item name="android:fontFamily">@font/catamaran</item>

    </style>


    <!--          REFERENCIAS          -->
    <style name="MyCardViewStyle">
        <!-- Tarjetas -->
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">12dp</item>
    </style>
    <style name="BotonGlobal" parent="@android:style/Widget.Button">
        <!-- Botones -->
        <item name="android:background">@drawable/boton</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="BottomNavTheme" parent="Widget.Design.BottomNavigationView">
        <!-- Nav -->
        <item name="android:itemBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Erronka1" parent="Base.Theme.Erronka1" />
</resources>